<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chatMyImageID"
            android:layout_width="@dimen/size50dp"
            android:layout_height="@dimen/size50dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/size2dp"
            android:src="@drawable/smile" />

        <TextView
            android:id="@+id/myMessageID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size10dp"
            android:layout_toStartOf="@+id/chatMyImageID"
            android:background="@color/messageColor"
            android:text="@string/my_message"
            android:textColor="@color/black_color"
            android:textSize="@dimen/textSize20sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>