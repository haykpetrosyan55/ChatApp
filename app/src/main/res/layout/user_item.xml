<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size100dp"
    android:orientation="horizontal"
    app:cardBackgroundColor="@color/blueBack"
    app:cardCornerRadius="@dimen/size10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userImageID"
        android:layout_width="@dimen/size85dp"
        android:layout_height="@dimen/size85dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/size10dp"
        android:src="@drawable/smile" />

    <TextView
        android:id="@+id/userNameID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/size120dp"
        android:text="@string/userName"
        android:textColor="@color/black_color"
        android:textSize="@dimen/textSize20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/size10dp"
        android:text="@string/online"
        android:textColor="@color/greenColor100"
        android:textStyle="italic" />

</android.support.v7.widget.CardView>